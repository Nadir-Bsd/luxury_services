{% extends 'base.html.twig' %}

{% block styleCustom %}
	<style>
		select {
			display: block !important;
		}

		.tp-caption.boxshadow,
		.boxshadow {
			box-shadow: none !important;
		}
	</style>
{% endblock %}


{% block body %}
	<!-- Page Header-->
	<section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2 class="white-text">Your profile</h2>
					<span class="white-text">Personnal & Professionnal informations</span>
					<ol class="breadcrumb">
						<li>
							<a href="app_home">Home</a>
						</li>
						<li class="active">Profile</li>
					</ol>
				</div>
			</div>
		</div>
	</section>


	<!-- Page Content-->
	<section class="gray-bg">
		<div class="container">
			<div class="row">
				<div class="score-container">
				{% if n == 100  %}
					<h4>
						<img src="{{ asset('img/s9bPVaK.gif') }}" style="height: 80px; width: 201px;">
						 &nbsp; Hooray ! Your profile is complete.
					</h4>
				{% endif %}
					<div class="c100 p{{ n }} small complete ">
						<span>{{ n }}%</span>
						<div class="slice">
							<div class="bar"></div>
							<div class="fill"></div>
						</div>
					</div>
					{% if n == 100  %}
						<a href="{{ path('app_candidacy_show') }}" class="btn btn-primary">my candidacies</a>
					{% endif %}
				</div>

				<div class="clearfix"></div>
			</div>
		</div>
	</section>


	{{ include('candidate/_form.html.twig') }}
{% endblock %}