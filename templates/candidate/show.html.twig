{% extends 'base.html.twig' %}

{% block title %}Candidate{% endblock %}

{% block body %}
    <h1>Candidate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidate.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ candidate.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ candidate.lastname }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ candidate.adress }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ candidate.country }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ candidate.nationality }}</td>
            </tr>
            <tr>
                <th>IsPassport</th>
                <td>{{ candidate.isPassport ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>File_passport</th>
                <td>{{ candidate.filePassport }}</td>
            </tr>
            <tr>
                <th>File_cv</th>
                <td>{{ candidate.fileCv }}</td>
            </tr>
            <tr>
                <th>File_pp</th>
                <td>{{ candidate.filePp }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ candidate.location }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ candidate.birthDate ? candidate.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Birth_location</th>
                <td>{{ candidate.birthLocation }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ candidate.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ candidate.description }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ candidate.notes }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ candidate.createdAt ? candidate.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ candidate.updatedAt ? candidate.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Deleted_at</th>
                <td>{{ candidate.deletedAt ? candidate.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_candidate_index') }}">back to list</a>

    <a href="{{ path('app_candidate_edit', {'id': candidate.id}) }}">edit</a>

    {{ include('candidate/_delete_form.html.twig') }}
{% endblock %}
